{
  "name": "web",
  "private": true,
  "scripts": {
    "dev": "run-s copyfiles serve",
    "test": "jest",
    "build": "run-s sass copyfiles build:esbuild",
    "build:esbuild": "esbuild src/index.jsx --bundle --outfile=public/dist/bundle.js --minify --define:DEBUG=false",
    "copyfiles": "copyfiles \"../../node_modules/katex/dist/fonts/**/*\" -u 3 public/dist",
    "sass": "sass src/style/bundle.scss public/dist/bundle.css --style compressed --no-source-map",
    "serve": "run-p watch:build watch:sass watch:serve",
    "clean": "del-cli public/dist",
    "cypress:open": "cypress open",
    "cypress:start-and-run": "start-server-and-test serve http://localhost:8000 cypress:run",
    "cypress:run": "cypress run",
    "watch:build": "node build.js",
    "watch:sass": "sass src/style/bundle.scss public/dist/bundle.css --watch",
    "watch:serve": "browser-sync --no-ghost-mode start --server 'public' --port 8000 --single --watch --no-open"
  },
  "dependencies": {
    "@lagunovsky/redux-react-router": "^3.2.0",
    "@reduxjs/toolkit": "^1.8.2",
    "axios": "^0.27.2",
    "body-scroll-lock": "^3.1.5",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "graphql-combine-query": "^1.2.4",
    "graphql-tag": "^2.12.6",
    "history": "^5.3.0",
    "plantuml-encoder": "^1.4.0",
    "primeflex": "^3.2.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-hook-form": "^7.31.2",
    "react-hot-toast": "^2.2.0",
    "react-markdown": "^8.0.3",
    "react-modal": "^3.15.1",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-table": "^7.8.0",
    "react-tabs": "^4.2.1",
    "react-textarea-markdown-editor": "^2.3.0",
    "react-titled": "^1.0.1",
    "redux": "^4.2.0",
    "redux-saga": "^1.1.3",
    "rehype-katex": "^6.0.2",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@fontsource/roboto": "^4.5.7",
    "@testing-library/react": "^12.1.5",
    "browser-sync": "^2.27.10",
    "copyfiles": "^2.4.1",
    "cypress": "^10.1.0",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.39",
    "esbuild-jest": "^0.5.0",
    "graphql": "^16.5.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-transform-stub": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.8.1",
    "react-test-renderer": "^16.14.0",
    "sass": "^1.52.0",
    "start-server-and-test": "^1.12.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "esbuild-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)(\\?inline)?$": "jest-transform-stub"
    },
    "globals": {
      "DEBUG": "false"
    }
  }
}
